<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackgroundImageView">
        <item name="android:alpha">0.5</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/london</item>
    </style>

    <style name="ButtonColour">
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textColorHighlight">@color/buttonHighlight</item>
        <item name="android:backgroundTint">@color/buttonBackground</item>
    </style>
</resources>
